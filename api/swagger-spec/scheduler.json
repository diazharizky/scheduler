{
  "schemes": [
    "http"
  ],
  "swagger": "2.0",
  "info": {
    "description": "The purpose of this application is to provice service that allows you to run specific routine/cron at scheduled time, either it's once or forever",
    "title": "Scheduler.",
    "termsOfService": "there are no TOS at this moment, use at your own risk we take no responsibility",
    "contact": {
      "name": "Diaz Harizky",
      "email": "diazharizky@gmail.com"
    },
    "version": "0.0.0"
  },
  "host": "scheduler:3000",
  "basePath": "/",
  "paths": {
    "/jobs": {
      "get": {
        "produces": [
          "application/json"
        ],
        "summary": "Get current running jobs.",
        "operationId": "jobs",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "post": {
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "summary": "Add a new cron job.",
        "operationId": "jobs",
        "parameters": [
          {
            "description": "Job payload.",
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/JobPayload"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/jobs/{job_id}": {
      "get": {
        "produces": [
          "application/json"
        ],
        "summary": "Get specific job.",
        "operationId": "jobs",
        "parameters": [
          {
            "type": "integer",
            "format": "int64",
            "description": "Retrieved from `/jobs`",
            "name": "job_id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "delete": {
        "description": "Stop specific running/terminated job",
        "produces": [
          "text/plain"
        ],
        "operationId": "jobs",
        "parameters": [
          {
            "type": "integer",
            "format": "int64",
            "description": "Retrieved from `/jobs`",
            "name": "job_id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    }
  },
  "definitions": {
    "EntryID": {
      "description": "EntryID identifies an entry within a Cron instance",
      "type": "integer",
      "format": "int64",
      "x-go-package": "github.com/robfig/cron/v3"
    },
    "Job": {
      "description": "Job represent the routine/cron to be executed",
      "type": "object",
      "required": [
        "name",
        "schedule",
        "action"
      ],
      "properties": {
        "action": {
          "description": "The action to be taken, so far only HTTP GET method is allowed.",
          "type": "string",
          "x-go-name": "Action"
        },
        "entry_id": {
          "$ref": "#/definitions/EntryID"
        },
        "job_id": {
          "type": "integer",
          "format": "int64",
          "x-go-name": "ID"
        },
        "live": {
          "description": "It defines how the service maintains the job, default to \"once\" if empty.",
          "type": "string",
          "x-go-name": "Live"
        },
        "name": {
          "description": "The name of routine/cron.",
          "type": "string",
          "x-go-name": "Name"
        },
        "schedule": {
          "description": "The time schedule to be registered, mimics cron formatting. Read https://godoc.org/github.com/robfig/cron, for the reference.",
          "type": "string",
          "x-go-name": "Schedule"
        },
        "status": {
          "type": "string",
          "x-go-name": "Status"
        }
      },
      "x-go-package": "github.com/diazharizky/scheduler/internal/definitions"
    }
  }
}